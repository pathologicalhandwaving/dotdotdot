(require 'scratch-pop)


;;; Code:

(global-set-key (kbd "C-M-s") 'scratch-pop)

(setq scratch-pop-backup-directory "/Users/Em/.emacs.d/scratch_pop/")
(add-hook 'kill-emacs-hook 'scratch-pop-backup-directory)


(provide 'scratch-settings)
(message "Scratch Settings Loaded!")
;;; scratch-settings.el ends here
