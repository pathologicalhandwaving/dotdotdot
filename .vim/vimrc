"" VIMRC
"" Modified: 2018-01-24

set hidden
set hlsearch
set number
set numberwidth=3
set tabstop=4
set noexpandtab
set shiftwidth=4
set wrap
set autoindent
set backspace=indent,eol,start
set nocompatible
set noswapfile
set spell
set spelllang=en_us
filetype plugin on
syntax on

"" COLORS

" HIGHLIGHTING
autocmd BufEnter * :syntax sync fromstart

syntax enable
set background=dark
colorscheme nord


"" SHELL
let $SHELL='/bin/bash'

"" VIMHOME
if !$VIMHOME
	let $VIMHOME=$HOME."/.vim"
endif

"" SETTINGS
source $VIMHOME/pack/settings/nord.vim
source $VIMHOME/pack/settings/mappings.vim
source $VIMHOME/pack/settings/lightline.vim
source $VIMHOME/pack/settings/limelight.vim
source $VIMHOME/pack/settings/goyo.vim
source $VIMHOME/pack/settings/vim-gitgutter.vim
source $VIMHOME/pack/settings/YUNOcommit.vim



"" DICTIONARIES

"" MOUSE
if has ('mouse')
	set mouse=a
endif

"" SEARCH
set incsearch

