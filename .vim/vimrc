" VIMRC

set hidden
set hlsearch
set number
set tabstop=4
set noexpandtab
set shiftwidth=4
set wrap
set autoindent
set backspace=indent,eol,start
set nocompatible
filetype plugin on
syntax on

" COLORS
autocmd BufEnter * :syntax sync fromstart

set background=dark
"colorscheme quantum
colorscheme vimbrant
set cursorline
hi cursorline ctermbg=245 ctermfg=49
set cursorcolumn
hi cursorcolumn ctermbg=245 ctermfg=49

set noswapfile


" VIMHOME
if !$VIMHOME
    let $VIMHOME=$HOME."/.vim"
endif

if has("termguicolors")
	set termguicolors
endif

if !$GVIMHOME
	let $GVIMHOME=$HOME."/.gvim"
endif

if has("gui_running")
    set $GVIMHOME/gvimrc
endif

" SOURCES
source $VIMHOME/filetype.vim
source $VIMHOME/settings/csv.vim
source $VIMHOME/settings/startify.vim
source $VIMHOME/settings/vimwiki.vim
source $VIMHOME/settings/YUNOcommit.vim
source $VIMHOME/settings/thematic.vim
source $VIMHOME/settings/mappings.vim
source $VIMHOME/settings/templates.vim
source $VIMHOME/settings/jedi.vim
"source $VIMHOME/settings/supertab.vim
source $VIMHOME/settings/vim-taskwarrior.vim

" DICTIONARY
"source dictionary+='/Users/Em/.vim/dictionaries'

" WILDMENU
set wildmenu
set wildmode=list:longest,full

" MOUSE
if has('mouse')
    set mouse=a
endif

" SEARCH
set incsearch


" STATUSBAR
set laststatus=2

let g:airline_theme="vimbrant"
" Airline Stuff
let g:airline_left_sep = '✾ '
let g:airline_left_sep = '❤︎ '
let g:airline_right_alt_sep = '✾ '
let g:airline_right_sep = '❤︎ '


autocmd BufNewFile,BufReadPost *.md set filetype=markdown
let g:markdown_fenced_languages = ['html', 'python', 'bash=sh', 'xml', 'css', 'yaml=yml' ]
let g:markdown_syntax_conceal = 0
